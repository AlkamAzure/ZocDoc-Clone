<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    tools:context=".screens.ProfileFragment">

    <TextView android:id="@+id/txtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_outline_edit_24"
        android:drawablePadding="10dp"
        android:text="Log in"
        android:textSize="20sp"
        android:gravity="center_vertical"/>

    <TextView android:id="@+id/txtSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtLogin"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/ic_baseline_perm_identity_24"
        android:drawablePadding="10dp"
        android:text="Sign up"
        android:textSize="20sp"
        android:gravity="center_vertical"/>

    <TextView android:id="@+id/txtContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtSignup"
        android:layout_marginTop="30dp"
        android:text="Contact us"
        android:textSize="20sp"
        android:gravity="center_vertical"/>

    <TextView android:id="@+id/txtShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtContact"
        android:layout_marginTop="5dp"
        android:text="Share Zocdoc"
        android:textSize="20sp"
        android:gravity="center_vertical"/>

    <TextView android:id="@+id/txtTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtShare"
        android:layout_marginTop="5dp"
        android:text="Terms of use"
        android:textSize="20sp"
        android:gravity="center_vertical"/>

    <TextView android:id="@+id/txtPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@color/white"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTerms"
        android:layout_marginTop="5dp"
        android:text="Privacy policy"
        android:textSize="20sp"
        android:gravity="center_vertical"/>

    <TextView android:id="@+id/lblVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 3.21.1"
        app:layout_constraintTop_toBottomOf="@+id/txtPrivacy"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>